@model QLXe.Models.HinhAnh

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Sửa</h2>

@using (Html.BeginForm("Edit", "HinhAnhs", FormMethod.Post, new { enctype = "multipart/form-data" }))

{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Hình ảnh</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            @Html.LabelFor(model => model.AnhTruoc, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @{
                    String ImagePath0 = "~/wwwroot/Images/" + Model.AnhTruoc;
                }

                <img src="@Url.Content(ImagePath0)" width="100" id="outputAnhTruoc" />
                <label for="ufile">Chọn ảnh</label>
                <input type="file" onchange="LoadFile(event,'outputAnhTruoc')" id="ufile" name="InputAnhTruoc" style="display: block;" />
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AnhTrai, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @{
                    string ImagePath1 = "~/wwwroot/Images/" + Model.AnhTrai;
                }
                <img src="@Url.Content(ImagePath1)" width="100" id="outputAnhTrai" />
                <label for="ufileTrai">Chọn ảnh</label>
                <input type="file" onchange="LoadFile(event, 'outputAnhTrai')" id="ufileTrai" name="InputAnhTrai" style="display: block;" />
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AnhSau, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @{
                    string ImagePath2 = "~/wwwroot/Images/" + Model.AnhSau;
                }
                <img src="@Url.Content(ImagePath2)" width="100" id="outputAnhSau" />
                <label for="ufileTrai">Chọn ảnh</label>
                <input type="file" onchange="LoadFile(event, 'outputAnhSau')" id="ufileSau" name="InputAnhSau" style="display: block;" />
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AnhPhai, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @{
                    string ImagePath3 = "~/wwwroot/Images/" + Model.AnhPhai;
                }
                <img src="@Url.Content(ImagePath3)" width="100" id="outputAnhPhai" />
                <label for="ufileTrai">Chọn ảnh</label>
                <input type="file" onchange="LoadFile(event, 'outputAnhPhai')" id="ufilePhai" name="InputAnhPhai" style="display: block;" />
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ID_SanPham, "Tên sản phẩm", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ID_SanPham", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ID_SanPham, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-default" />
            </div>
        </div>
    </div>
}


<div>
    @Html.ActionLink("Trở lại", "Index")
</div>
<script>
    var LoadFile = function (event, outputId) {
        var img = document.getElementById(outputId);
        img.src = URL.createObjectURL(event.target.files[0]);
    };
    window.onload = function() {
        var InputAnhSau = document.getElementById('ufileSau');
        InputAnhSau.src = '@Url.Content("~/wwwroot/Images/" + Model.AnhSau)';
        InputAnhSau.value = '@Url.Content("~/wwwroot/Images/" + Model.AnhSau)';
    };
</script>
