@model QLXe.Models.DonHang

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Sửa</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Đơn hàng</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            @Html.LabelFor(model => model.NgayDat, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <span>@Model.NgayDat</span>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NgayGiaoHang, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @{
                    string a = Model.NgayGiaoHang?.ToString("yyyy-MM-dd");
                }
                
                <input type="date" class="form-control" id="NgayGiaoHang" name="NgayGiaoHang" value="@a" />
                @Html.ValidationMessageFor(model => model.NgayGiaoHang, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DiaChiGiaoHang, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <span>@Model.DiaChiGiaoHang</span>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TongGiaTri, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <span>@Model.TongGiaTri</span>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.KhachHang.Ten, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <span>@Model.KhachHang.Ten</span>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TinhTrang, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.TinhTrang, new SelectList(
                    new List<Object>{
                        new { value = 1 , text = "Chờ xác nhận" },
                        new { value = 2 , text = "Đã xác nhận" },
                        new { value = 3 , text = "Hoàn thành" },
                        new { value = 4, text = "Đã hủy" },
                        new { value = 5 , text = "Chưa cọc" },
                        new { value = 6 , text = "Đã cọc" }
                    },
                    "value",
                    "text",
                    Model.TinhTrang
                ), "Chọn tình trạng", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TinhTrang, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SDT, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <span>@Model.SDT</span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Trở lại", "Index")
</div>