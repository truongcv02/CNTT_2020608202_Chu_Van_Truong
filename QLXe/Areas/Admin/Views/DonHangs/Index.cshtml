@model PagedList.IPagedList<QLXe.Models.DonHang>


@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

<h2>Danh sách đơn hàng</h2>
@using (Html.BeginForm())
{
    <div>
        Tìm kiếm: @Html.TextBox("SearchString", ViewBag.currentFilter as string)
        <button type="submit" style="border: none"><i class="mdi mdi-magnify fs-4"></i></button>
    </div>
}
<table class="table">
    <tr>
        <th>
            Tên khách hàng
        </th>
        <th>
            Ngày đặt
        </th>
        <th>
            Ngày giao hàng
        </th>
        <th>
            Địa chỉ giao hàng
        </th>
        <th>
            Tổng giá trị
        </th>
        <th>
            Tình trạng
        </th>
        <th>
            Số điên thoại
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.KhachHang.Ten)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayDat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayGiaoHang)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChiGiaoHang)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TongGiaTri)
            </td>
            <td>
                @{
                    var tinhTrangText = "";
                    switch (item.TinhTrang)
                    {
                        case 1:
                            tinhTrangText = "Chờ xác nhận";
                            break;
                        case 2:
                            tinhTrangText = "Đã xác nhận";
                            break;
                        case 3:
                            tinhTrangText = "Hoàn thành";
                            break;
                        case 4:
                            tinhTrangText = "Đã Hủy";
                            break;
                        case 5:
                            tinhTrangText = "Chưa cọc";
                            break;
                        case 6:
                            tinhTrangText = "Đã cọc";
                            break;
                        default:
                            tinhTrangText = "Không xác định";
                            break;
                    }
                }

                @Html.DisplayFor(modelItem => tinhTrangText)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SDT)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.ID }, new { @class = "btn btn-primary btn-sm" })
                @Html.ActionLink("Chi tiết", "Details", new { id = item.ID }, new { @class = "btn btn-info btn-sm" })
            </td>
        </tr>
    }

</table>
Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/ @Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("Index", new { page, currentFilter = ViewBag.currentFilter }))