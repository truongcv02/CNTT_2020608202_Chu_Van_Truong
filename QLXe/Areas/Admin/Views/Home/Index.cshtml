@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">

    <div class="row">
        <!-- Column -->
        <div class="col-md-6 col-lg-2 col-xlg-3">
            <div class="card card-hover">
                <div class="box bg-cyan text-center">
                    <h1 class="font-light text-white">
                        <i class="mdi mdi-view-dashboard"></i>
                    </h1>
                    <h6 class="text-white">Dashboard</h6>
                </div>
            </div>
        </div>
        <!-- Column -->
        <div class="col-md-6 col-lg-5 col-xlg-3">
            <div class="card card-hover">
                <a href="@Url.Action("Index","Charts")">
                    <div class="box bg-success text-center">
                        <h1 class="font-light text-white">
                            <i class="mdi mdi-chart-areaspline"></i>
                        </h1>
                        <h6 class="text-white">Charts</h6>
                    </div>
                </a>
            </div>
        </div>
        <!-- Column -->
        <div class="col-md-6 col-lg-3 col-xlg-3">
            <div class="card card-hover">
                <a href="@Url.Action("Index","DanhMucs")">
                    <div class="box bg-warning text-center">
                        <h1 class="font-light text-white">
                            <i class="mdi mdi-collage"></i>
                        </h1>
                        <h6 class="text-white">Danh mục</h6>
                    </div>
                </a>  
            </div>
        </div>
        <!-- Column -->
        <div class="col-md-6 col-lg-2 col-xlg-3">
            <div class="card card-hover">
                <a href="@Url.Action("Index","SanPhams")">
                    <div class="box bg-danger text-center">
                        <h1 class="font-light text-white">
                            <i class="mdi mdi-border-outside"></i>
                        </h1>
                        <h6 class="text-white">Sản phẩm</h6>
                    </div>
                </a>     
            </div>
        </div>
        <!-- Column -->
        <div class="col-md-6 col-lg-4 col-xlg-4">
            <div class="card card-hover">
                <a href="@Url.Action("Index","KhuyenMais")">
                    <div class="box bg-danger text-center">
                        <h1 class="font-light text-white">
                            <i class="mdi mdi-receipt"></i>
                        </h1>
                        <h6 class="text-white">Khuyến mãi</h6>
                    </div>
                </a>
                    
            </div>
        </div>
        <!-- Column -->
        <div class="col-md-6 col-lg-2 col-xlg-4">
            <div class="card card-hover">
                <a href="@Url.Action("Index","HinhAnhs")">
                    <div class="box bg-info text-center">
                        <h1 class="font-light text-white">
                            <i class="mdi mdi-relative-scale"></i>
                        </h1>
                        <h6 class="text-white">Hình ảnh</h6>
                    </div>
                </a>
                
            </div>
        </div>
        <!-- Column -->
        <div class="col-md-6 col-lg-2 col-xlg-3">
            <div class="card card-hover">
                <a href="@Url.Action("Index","TaiKhoans")">
                    <div class="box bg-cyan text-center">
                        <h1 class="font-light text-white">
                            <i class="mdi mdi-account"></i>
                        </h1>
                        <h6 class="text-white">Tài khoản</h6>
                    </div>
                </a>
                
            </div>
        </div>
        <!-- Column -->
        <div class="col-md-6 col-lg-2 col-xlg-3">
            <div class="card card-hover">
                <a href="@Url.Action("Index","DonHangs")">
                    <div class="box bg-success text-center">
                        <h1 class="font-light text-white">
                            <i class="mdi mdi-marker-check"></i>
                        </h1>
                        <h6 class="text-white">Đơn hàng</h6>
                    </div>
                </a>
                
            </div>
        </div>
        <!-- Column -->
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <div class="d-md-flex align-items-center">
                        <div>
                            <h4 class="card-title">Các thông số của shop </h4>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-lg-3">
                            <div class="bg-dark p-10 text-white text-center">
                                <i class="mdi mdi-account fs-3 mb-1 font-16"></i>
                                <h5 class="mb-0 mt-1">@ViewBag.Tongtaikhoan</h5>
                                <small class="font-light">Tổng khách hàng</small>
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="bg-dark p-10 text-white text-center">
                                <i class="mdi mdi-plus fs-3 font-16"></i>
                                <h5 class="mb-0 mt-1">@ViewBag.Tongtaikhoanmoi</h5>
                                <small class="font-light">Số khách hàng mới trong tháng</small>
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="bg-dark p-10 text-white text-center">
                                <i class="mdi mdi-cart fs-3 mb-1 font-16"></i>
                                <h5 class="mb-0 mt-1">@ViewBag.Tonggiohang</h5>
                                <small class="font-light">Giỏ hàng</small>
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="bg-dark p-10 text-white text-center">
                                <i class="mdi mdi-tag fs-3 mb-1 font-16"></i>
                                <h5 class="mb-0 mt-1">@ViewBag.Tongdonhang</h5>
                                <small class="font-light">Tổng đơn hàng</small>
                            </div>
                        </div>
                        <div class="col-lg-3 mt-3">
                            <div class="bg-dark p-10 text-white text-center">
                                <i class="mdi mdi-table fs-3 mb-1 font-16"></i>
                                <h5 class="mb-0 mt-1">@ViewBag.Tongdonhangdanggiao</h5>
                                <small class="font-light">Đơn hàng đang giao</small>
                            </div>
                        </div>
                        <div class="col-lg-3 mt-3">
                            <div class="bg-dark p-10 text-white text-center">
                                <i class="mdi mdi-bank fs-3 mb-1 font-16"></i>
                                <h5 class="mb-0 mt-1">@ViewBag.DoanhThu</h5>
                                <small class="font-light">Doanh thu trong tháng</small>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

