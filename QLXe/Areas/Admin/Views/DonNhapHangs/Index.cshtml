@model PagedList.IPagedList<QLXe.Models.DonNhapHang>


@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
<h2>Danh sách đơn nhập hàng</h2>
@using (Html.BeginForm())
{
    <div>
        Tìm kiếm: @Html.TextBox("SearchString", ViewBag.currentFilter as string)
        <button type="submit" style="border: none"><i class="mdi mdi-magnify fs-4"></i></button>
    </div>
}
<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Tên hãng
        </th>
        <th>
            Tên xe
        </th>
        <th>
            Số lượng
        </th>
        <th>
            Ngày nhập
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NhaSanXuat.TenHang)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SanPham.TenXe)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoLuong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayNhap)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.ID }, new { @class = "btn btn-primary btn-sm" })
                @Html.ActionLink("Chi tiết", "Details", new { id = item.ID }, new { @class = "btn btn-info btn-sm" })
            </td>
        </tr>
    }

</table>
Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/ @Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("Index", new { page, currentFilter = ViewBag.currentFilter }))